#include<iostream>
#include<string>
using namespace std;

//Node for Trie
class Node {
public:
    Node* children[26];
    bool isEnd;

    Node() {
        for(int i = 0; i < 26; i++) {
            children[i] = NULL;
        }
        isEnd = false;
    }
};

//Class to implement Trie data structure
class Trie {
private:
    Node* root;

public:
    Trie() {
        root = new Node();
    }

    //Insertion operation
    void insert(string word) {
        Node* curr = root;
        for(char ch : word) {
            int idx = ch - 'a';
            if(curr->children[idx] == NULL) {
                curr->children[idx] = new Node();
            }
            curr = curr->children[idx];
        }
        curr->isEnd = true;
    }

    //Search operation
    bool search(string word) {
        Node* curr = root;
        for(char ch : word) {
            int idx = ch - 'a';
            if(curr->children[idx] == NULL) {
                return false;
            }
            curr = curr->children[idx];
        }
        return curr->isEnd;
    }
};

int main() {
    Trie trie;

    trie.insert("apple");
    trie.insert("mongo");
    trie.insert("papaya");
    trie.insert("pineapple");

    cout << trie.search("apple") << "\n";
    cout << trie.search("pineapple") << "\n";

    return 0;
}
